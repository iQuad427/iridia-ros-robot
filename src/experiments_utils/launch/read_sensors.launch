<launch>
    <arg name="simulation" value="False" />

    <arg name="resp_port" value="/dev/ttyACM1" />
    <arg name="init_port" value="/dev/ttyACM0" />

    <node pkg="ros_utils" type="odometry_republisher.py" name="odometry_republisher" output="screen" cwd="node" ></node>
    <node pkg="ros_utils" type="sensor_measurements.py" name="resp_sensor_measurements" output="screen" cwd="node" args="resp $(arg resp_port)" ></node>
    <node pkg="ros_utils" type="sensor_measurements.py" name="init_sensor_measurements" output="screen" cwd="node" args="init $(arg init_port)" ></node>
</launch>