<launch>
    <!-- TODO: remove the need for the virtual environment, not required for robot use -->
    <arg name="venv" value="/home/quentin/Dev/argos3-ros-triangulation/venv/bin/python3" />

    <arg name="output_dir" value="/home/quentin/Dev/iridia-dwm/src/ros_workspace/src/static_distribution/script/output/noise_model" />

    <arg name="init_output_file" value="init_4" />
    <arg name="resp_output_file" value="resp_4" />

    <arg name="simulation" value="False" />
    <arg name="resp_port" value="/dev/ttyACM0" />
    <arg name="init_port" value="/dev/ttyACM1" />
    <arg name="experiment_duration" default="60" />

    <node pkg="ros_utils" type="experiment_manager.py" name="experiment_manager" output="screen" cwd="node" launch-prefix="$(arg venv)" args="$(arg experiment_duration)" ></node>
    <node pkg="module_utils" type="sensor_measurements.py" name="init_sensor_measurements" output="screen" cwd="node" launch-prefix="$(arg venv)" args="$(arg simulation) init $(arg init_port) $(arg output_dir) $(arg init_output_file)" ></node>
    <node pkg="module_utils" type="sensor_measurements.py" name="resp_sensor_measurements" output="screen" cwd="node" launch-prefix="$(arg venv)" args="$(arg simulation) resp $(arg resp_port) $(arg output_dir) $(arg resp_output_file)" ></node>
</launch>